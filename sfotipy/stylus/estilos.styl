@import "normalize.styl"

gris_oscuro = #333333
gris_claro = #818181

a
	text-decoration none
body
	font-family 'Varela Round', sans-serif
	font-size 16px
	
figure
	margin 0
	
//BUTTONS
.button-menu
	position absolute
	top 50%
	margin-top -10px
	left .5em

//oocss classes
	
.container
	font-size 0 //para quitar el borde
	padding 1.4rem
	text-align center
.border-bottom
	border-bottom 1px solid gris_claro	
.name
	color gris_oscuro

.menu
	display none// para que no se muestre en mobile
	
.relative
	position relative
		
.author
	color gris_claro
	
.header
	height 3.5em
	
	//a
		//display none
	.title
		font-size 1.1em
		text-align center
		margin 0
		line-height 3.5em
	
.song
	display inline-block
	font-size 1rem //rem porque en container hemos puesto el font-size a 0
	margin-bottom 1em
	margin-right 1em
	text-align left
	width 8rem
	&:nth-child(even)// hijos pares
		margin-right 0
	p
		margin .5em 0
	
