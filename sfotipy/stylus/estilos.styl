@import "normalize.styl"
@import "iconfonts.styl"

gris_oscuro = #333333
gris_claro = #818181
rojo = #BD255B
gris_mas_claro =#f0f0f0

a
	text-decoration none
body
	font-family 'Varela Round', sans-serif
	font-size 16px
	
figure
	margin 0
	
img
	vertical-align top
ul
	margin 0
	padding 0
	
//BUTTONS
.button-menu
	color gris_oscuro
	left .5em
	margin-top -10px
	position absolute
	top 50%

//oocss classes
	
.container
	font-size 0 //para quitar el borde
	padding 1.4rem
	text-align center
.action
	color white
	font-size 1.2em
	margin-right .5em
	&:last-child
		margin-right 0
	&.gray
		color gris_claro
	
.actions
	position absolute
	bottom 0
	right 0
	left 0
	background rgba(black, .3)
	
.border-bottom
	border-bottom 1px solid gris_claro	
.name
	color gris_oscuro

.menu
	display none// para que no se muestre en mobile
	
.relative
	position relative
		
.author
	color gris_claro

.center-block
	margin 0 auto
	
.center-text
	text-align center
	
.right-text
	text-align right
	
.padding
	padding 1em	

.padding-tb
	padding 1em 0

.left
	float left

.right
	float right
	
.wrap
	width 1000px
.round 
	border-radius 50%
	overflow hidden
.progress
	margin 1em 0
	position relative
	.min 
	.max
		font-size .8em
	.min
		position absolute
		left 0
		top -5px
	.max
		position absolute
		right 0	
		top -5px
	.total
		background gris_claro
		border-radius 5px
		height 5px
		margin 0 auto
		width 75%
	.state
		background rojo
		border-radius 5px
		height 5px
		position relative
		width 30%
	.circle
		background gris_oscuro
		border-radius 50%
		height 10px
		position absolute
		right 0
		top -2px
		width 10px
	
.header
	height 3.5em
	
	//a
		//display none
	.title
		font-size 1.1em
		text-align center
		margin 0
		line-height 3.5em
	
.song
	display inline-block
	font-size 1rem //rem porque en container hemos puesto el font-size a 0
	margin-bottom 1em
	margin-right 1em
	text-align left
	width 8rem
	&:nth-child(even)// hijos pares
		margin-right 0
	p
		margin .5em 0
	
.playing
	&.small
		width 20em
		
@media screen and (min-width:480px)
	
	.song
		&:nth-child(even)
			margin-right 1em
	.image
		img
			width 100%
			height auto		
	.playing
		&.medium
			width auto
.input
	border 1px solid gris_claro
	border-radius 5px
	height 2.5em
	padding 0 1em 0 2em
.search-icon
	color gris_claro
	left .5em
	position absolute
	top .8em
.close-icon
	position absolute
	top .5em
	color gris_claro
	right .5em
	font-size 1.2em

@media screen and (min-width:1000px)
	
	body
		background gris_mas_claro
	.button-menu
		display none
	.menu
		display block
		background gris_mas_claro
		overflow hidden
		.item
			float left
			list-style none
			
			a
				color gris_oscuro
				text-transform uppercase
				cursor pointer
				padding 1em
				display block
				border-top 5px solid transparent
				&:hover
					border-top 5px solid gris_claro
	.header
		height auto
		.title
			display none
			
	.isotipo
		width 122px
	.logo
		padding 1.3em 0
		overflow hidden
		background white
	.avatar
		width 38px
		height 38px
	.username
		color gris_claro
		position relative
		top 9px
		margin-left .5em
		&:after
			border-left 7px solid transparent 
			border-right 7px solid transparent
			border-top 9px solid gris_claro
			content ""
			display inline-block
			margin-left .4em
			