@import "nib"
@import "normalize.styl"
@import "iconfonts.styl"

/*animacion(parametro)
	-webkit-animation parametro
	-moz-animation parametro
	-o-animation parametro
	-ms-animation parametro
	animation parametro*/

gris_oscuro = #333333
gris_claro = #818181
rojo = #BD255B
gris_mas_claro =#f0f0f0

a
	text-decoration none
body
	font-family 'Varela Round', sans-serif
	font-size 16px
	
figure
	margin 0
	
img
	vertical-align top
ul
	margin 0
	padding 0
	
//BUTTONS
.button-menu
	color gris_oscuro
	left .5em
	margin-top -10px
	position absolute
	top 50%

//oocss classes
	
.container
	font-size 0 //para quitar el borde
	padding 1.4rem
	text-align center
.action
	color white
	font-size 1.2em
	margin-right .5em
	&:last-child
		margin-right 0
	&.gray
		color gris_claro
	
.actions
	position absolute
	bottom 0
	right 0
	left 0
	background rgba(black, .3)
	
.border-bottom
	border-bottom 1px solid gris_claro	
.name
	color gris_oscuro

.menu
	display none// para que no se muestre en mobile
	
.relative
	position relative
		
.author
	color gris_claro

.center-block
	margin 0 auto
	
.center-text
	text-align center
	
.right-text
	text-align right
	
.padding
	padding 1em	

.padding-tb
	padding 1em 0

.left
	float left

.right
	float right
	
.wrap
	width 1000px
.round 
	border-radius 50%
	overflow hidden
.progress
	margin 1em 0
	position relative
	.min 
	.max
		font-size .8em
	.min
		position absolute
		left 0
		top -5px
	.max
		position absolute
		right 0	
		top -5px
	.total
		background gris_claro
		border-radius 5px
		height 5px
		margin 0 auto
		width 75%
	.state
		background rojo
		border-radius 5px
		height 5px
		position relative
		width 30%
		animation 20s state infinite linear
	.circle
		background gris_oscuro
		border-radius 50%
		height 10px
		position absolute
		right 0
		top -2px
		width 10px
		animation 1s circle infinite
@keyframes state
	0%
		width 0
	100%
		width 100%
@keyframes circle
	0%
		transform scale(1)
	100%
		transform scale(2)
		
.header
	height 3.5em
	
	//a
		//display none
	.title
		font-size 1.1em
		line-height 3.5em
		margin 0
		text-align center
	
.song
	display inline-block
	font-size 1rem //rem porque en container hemos puesto el font-size a 0
	margin-bottom 1em
	margin-right 1em
	text-align left
	width 8rem
	&:nth-child(even)// hijos pares
		margin-right 0
	p
		margin .5em 0
	
.playing
	&.small
		width 20em
		margin 0 auto

.playlist
	display none

.logo
	display none
		
@media screen and (min-width:480px)
	
	.song
		&:nth-child(even)
			margin-right 1em
	.image
		img
			width 100%
			height auto		
	.playing
		&.medium
			width auto
.input
	border 1px solid gris_claro
	border-radius 5px
	height 2.5em
	padding 0 1em 0 2em
.search-icon
	color gris_claro
	left .5em
	position absolute
	top .8em
.close-icon
	color gris_claro
	font-size 1.2em
	position absolute
	right .5em
	top .5em

@media screen and (min-width:1000px)
	
	body
		background gris_mas_claro
	.button-menu
		display none
	.playing
		padding-top 1.3em
		&.large
			margin 0 auto
			width 62.5em
			overflow hidden
		
	.menu
		background gris_mas_claro
		border-top 1px solid gris_claro
		display block
		overflow hidden
		.item
			float left
			list-style none
			
			a
				border-top 5px solid transparent
				color gris_oscuro
				cursor pointer
				display block
				padding 1em
				text-transform uppercase
				&:hover
					border-top 5px solid gris_claro
	.music
		float left
		width 32.5em
		.description
			display none
	.playlist
		border-left 1px solid gris_claro
		display block
		padding 0 2em
		width 22em
		.list
			list-style none
		.item
			padding 1em 0
		.action
			font-size 14px
	.header
		border none
		height auto
		.title
			display none
			
	.isotipo
		width 122px
	.logo
		background white
		display block
		overflow hidden
		padding 1.3em 0
	.avatar
		height 38px
		width 38px
	.username
		color gris_claro
		margin-left .5em
		position relative
		top 9px
		&:after
			border-left 7px solid transparent 
			border-right 7px solid transparent
			border-top 9px solid gris_claro
			content ""
			display inline-block
			margin-left .4em
			