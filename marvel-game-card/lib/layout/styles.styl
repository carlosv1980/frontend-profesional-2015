.Layout
	display flex
	padding .5em
	margin .5em
	test(brown)
	flex-direction column
	min-height 100vh //viewpor height : el 100 sería igual al alto del tamaño de la pantalla
	justify-content space-between
	background-image url('../images/city.jpg')
	background-size cover
	> section
		margin .5em
	&-main
		display flex
		justify-content space-between
	&-status
		test(green)
		width 200px
	&-battle
		test(orange)
		flex 1 //con esta instrucción, este div ocupará el espacio vacio entre div
		margin 0 .5em
		background-image url('../images/pattern.jpg')
	&-phases
		test(purple)
		width 200px
		position relative
	&-angonist
		test(blue)
		display flex
		justify-content space-between
	&-player
		test(gray)
		display flex
		justify-content space-between